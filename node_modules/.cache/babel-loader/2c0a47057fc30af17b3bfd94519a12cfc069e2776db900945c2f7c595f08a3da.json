{"ast":null,"code":"import { mapGetters } from 'vuex';\nexport default {\n  computed: {\n    ...mapGetters(['getSaveBoards'])\n  },\n  methods: {\n    showCart() {\n      if (!this.getSaveBoards.length) return alert('장바구니가 비어있습니다.');\n      this.$store.commit('SET_MODAL', true);\n    }\n  }\n};","map":{"version":3,"names":["mapGetters","computed","methods","showCart","getSaveBoards","length","alert","$store","commit"],"sources":["src/components/button/Floating.vue"],"sourcesContent":["<template>\n  <a @click=\"showCart\" class=\"floating-button\">🎁 ( {{ getSaveBoards.length }} )</a>\n</template>\n<script>\nimport { mapGetters } from 'vuex'\n\nexport default {\n  computed: {\n    ...mapGetters(['getSaveBoards'])\n  },\n  methods: {\n    showCart() {\n      if (!this.getSaveBoards.length) return alert('장바구니가 비어있습니다.')\n      this.$store.commit('SET_MODAL', true)\n    }\n  }\n}\n</script>\n<style scoped>\n.floating-button {\n  display: inline-block;\n  background-color: #3498db;\n  color: #ffffff;\n  font-weight: bold;\n  text-decoration: none;\n  text-align: center;\n  line-height: 2.5rem;\n  width: 5rem;\n  height: 2.5rem;\n  border-radius: 1rem;\n  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);\n  position: fixed;\n  bottom: 1rem;\n  right: 1rem;\n  transition: all 0.3s ease;\n  cursor: pointer;\n}\n\n.floating-button:hover {\n  background-color: #2980b9;\n  transform: translateY(-4px);\n  box-shadow: 0 7px 20px rgba(0, 0, 0, 0.3);\n}\n\n.floating-button:active {\n  transform: translateY(-2px);\n  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);\n}\n</style>"],"mappings":"AAIA,SAAAA,UAAA;AAEA;EACAC,QAAA;IACA,GAAAD,UAAA;EACA;EACAE,OAAA;IACAC,SAAA;MACA,UAAAC,aAAA,CAAAC,MAAA,SAAAC,KAAA;MACA,KAAAC,MAAA,CAAAC,MAAA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}